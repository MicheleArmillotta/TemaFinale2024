		 	println("WIS: incinerator STOP BURN") color red
		 	forward monitoring_device -m turnLedOff : turnLedOff(X)
		 }
		 
		 Goto idle
		
		
		State testAdd{ //solo a fini di test
			forward monitoring_device -m addAsh : addAsh(X)
		}
		
		Goto wait_message

